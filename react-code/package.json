{
  "name": "my-react-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest --config jest.config.mjs",

    "lint:code": "eslint .",
    "lint:md": "markdownlint \"**/*.md\" --config .markdownlint.json",
    "lint:spell": "cspell --no-progress --no-summary --relative --show-context --config ./cspell.json \"**/*.md\"",
    "lint": "npm run lint:code && npm run lint:md && npm run lint:spell",

    "prepare": "husky install"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "axios": "^1.10.0",
    "formik": "^2.4.6",
    "i18next": "^25.3.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.6.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.7.0",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@eslint/js": "^9.29.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^30.0.4",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "vite": "^7.0.0",

    "cspell": "^8.14.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "markdownlint-cli": "^0.41.0"
  },
  "lint-staged": {
    "*.md": [
      "markdownlint --config .markdownlint.json --fix",
      "cspell --no-progress --no-summary --config ./cspell.json"
    ]
  }
}
